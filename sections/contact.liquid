<div class="container">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-8 text-center">
			<h1>{{ page.title }}</h1>
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-12 col-lg-8">
			{%- form 'contact', data-needs-validation: true, novalidate: true -%}
				{%- if form.posted_successfully? -%}
					<p>{{ 'contact.form.post_success' | t }}</p>
				{%- endif -%}
				{{ form.errors | default_errors }}
				<div class="input-group mb-3">
					<label class="form-label visually-hidden" for="ContactFormName">{{ 'contact.form.name' | t }}</label>
					<input class="form-control" type="text" name="contact[name]" id="ContactFormName" placeholder="{{ 'contact.form.name' | t }}" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" minlength="4" required>
					<div class="invalid-feedback">{{ 'contact.error.name' | t }}</div>
				</div>
				<div class="input-group mb-3">
					<label class="form-label visually-hidden" for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
					<input class="form-control" type="email" name="contact[email]" id="ContactFormEmail" placeholder="{{ 'contact.form.email' | t }}" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" spellcheck="false" autocomplete="off" autocapitalize="off" required>
					<div class="invalid-feedback">{{ 'contact.error.email' | t }}</div>
				</div>
				<div class="input-group mb-3">
					<label class="form-label visually-hidden" for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
					<input class="form-control" type="tel" name="contact[phone]" id="ContactFormPhone"  placeholder="{{ 'contact.form.phone' | t }}" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" pattern="[0-9\-]*">
					<div class="invalid-feedback">{{ 'contact.error.phone' | t }}</div>
				</div>
				<div class="input-group mb-3">
					<label class="form-label visually-hidden" for="ContactFormMessage">{{ 'contact.form.message' | t }}</label>
					<textarea class="form-control" rows="10" name="contact[body]" id="ContactFormMessage" placeholder="{{ 'contact.form.message' | t }}" required>{%- if form.body -%}{{- form.body -}}{%- endif -%}</textarea>
				</div>
				<input type="submit" class="btn btn-primary" value="{{ 'contact.form.send' | t }}">
			{%- endform -%}
		</div>
	</div>
</div>