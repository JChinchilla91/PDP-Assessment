{%- comment -%}
	Renders empty quickshop modal waiting for JavaScript to act upon it when called
	
	Usage:
	{%- render 'quickshop-modal' -%}
	
{%- endcomment -%}
{%- if settings.quickshop_enabled == true -%}
<!-- QuickShop Modal -->
<div class="modal fade" id="quickShopModal" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body template-product">... Loading ...</div>
		</div>
	</div>
</div>
{%- endif -%}