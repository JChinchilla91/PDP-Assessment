			}
		]
	},
	{
		"name": "Product Grid",
		"settings": [
			{
				"type": "image_picker",
				"id": "no_image",
				"label": "Default Product Image",
				"info": "Will be used if a product image is missing."
			},
			{
				"type": "header",
				"content": "Grid Settings"
			},
			{
				"type": "range",
				"id": "search_limit_by",
				"min": 1,
				"max": 50,
				"step": 1,
				"default": 24,
				"label": "Select the Amount of Items to Show"
			}
		]
	},
