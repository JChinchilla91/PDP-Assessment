	{
		"name": "Theme Color",
		"settings": [
			{
				"type": "color",
				"id": "theme_light_color",
				"label": "Theme Light Mode Color",
				"default": "#1773B0"
			},
			{
				"type": "color",
				"id": "theme_dark_color",
				"label": "Theme Dark Mode Color",
				"default": "#5c636a"
			}
		]
	},
	{
		"name": "Favicon",
		"settings": [
			{
				"type": "image_picker",
				"id": "favicon",
				"label": "Favicon Image",
				"info": "Will be scaled down to 32 x 32px, this will be default if none provided from the branding settings"
			}
		]
	},
	{
		"name": "Quick Shop",
		"settings": [
			{
				"type": "checkbox",
				"id": "quickshop_enabled",
				"label": "Activate Quick Shop Popup",
				"default": false
			}
		]
	},
	{
		"name": "Collection",
		"settings": [
			{
				"type": "checkbox",
				"id": "collection_sort_enabled",
				"label": "Activate Collection Sort Options",
				"default": true
			}
		]
	},
	{
		"name": "Gift Card",
		"settings": [
			{
				"type": "image_picker",
				"id": "gift_card_company_logo",
